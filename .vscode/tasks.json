{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile C++ WSL",
            "type": "shell",
            "command": "/usr/bin/g++", //path
            "args": [
                "-g",
                "-O2", //otimização
                "-std=c++20", //versão do C++
                "-Wall", //ativa todos warnings
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}" // Sem .exe!
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
